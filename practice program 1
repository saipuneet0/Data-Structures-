#include <stdio.h>
#include <limits.h>

int reverse(int x) {
    long long reversed_num = 0;
    while (x != 0) {
        int pop = x % 10;
        x /= 10;
        reversed_num = reversed_num * 10 + pop;
    }
    if (reversed_num > INT_MAX || reversed_num < INT_MIN) {
        return 0;
    }
    return (int)reversed_num;
}

int main() {
    int num1 = 123;
    printf("Reversed number for %d is %d\n", num1, reverse(num1));

    int num2 = -123;
    printf("Reversed number for %d is %d\n", num2, reverse(num2));

    int num3 = 120;
    printf("Reversed number for %d is %d\n", num3, reverse(num3));

    int num4 = 1534236469;
    printf("Reversed number for %d is %d\n", num4, reverse(num4));

    return 0;
}
