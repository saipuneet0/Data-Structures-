#include <stdio.h>

int main() {
    int n;
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int numbers[n];
    printf("Enter %d numbers:\n", n);
    for (int i = 0; i < n; ++i) {
        printf("Enter number %d: ", i + 1);
        scanf("%d", &numbers[i]);
    }

    printf("\nChecking for odd or even numbers:\n");
    for (int i = 0; i < n; ++i) {
        if (numbers[i] % 2 == 0) {
            printf("%d is an even number.\n", numbers[i]);
        } else {
            printf("%d is an odd number.\n", numbers[i]);
        }
    }

    return 0;
}
