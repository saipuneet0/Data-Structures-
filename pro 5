#include <stdio.h>

long long factorial(int n) {
    if (n < 0) {
        return -1;
    }
    if (n == 0) {
        return 1;
    }
    return n * factorial(n - 1);
}

int main() {
    int n;
    long long result;

    printf("Enter a non-negative integer: ");
    scanf("%d", &n);

    result = factorial(n);

    if (result == -1) {
        printf("Factorial of a negative number doesn't exist.\n");
    } else {
        printf("Factorial of %d is %lld.\n", n, result);
    }

    return 0;
}
