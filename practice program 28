 #include <stdio.h>
#include <string.h>

int main() {
    char arr[] = "programming";
    int freq[256] = {0};
    int len = strlen(arr);

    for (int i = 0; i < len; i++) {
        freq[(unsigned char)arr[i]]++;
    }

    printf("Indices of repeated characters:\n");
    for (int i = 0; i < len; i++) {
        if (freq[(unsigned char)arr[i]] > 1) {
            printf("Character '%c' is repeated at indices: ", arr[i]);
            for (int j = 0; j < len; j++) {
                if (arr[j] == arr[i]) {
                    printf("%d ", j);
                }
            }
            printf("\n");
            freq[(unsigned char)arr[i]] = 0;
        }
    }
    
    return 0;
}
