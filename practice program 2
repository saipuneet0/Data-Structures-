#include <stdio.h>
#include <string.h>
#include <ctype.h>

int is_valid_string(const char *str) {
    if (str == NULL || *str == '\0') {
        return 0;
    }

    while (*str) {
        if (!isalnum((unsigned char)*str) && *str != ' ' && *str != '_' && *str != '-') {
            return 0;
        }
        str++;
    }

    return 1;
}

int main() {
    const char *str1 = "Hello World_123";
    const char *str2 = "Invalid@String!";
    const char *str3 = "";
    const char *str4 = NULL;
    const char *str5 = "Valid-String-1";

    printf("'%s' is valid: %d\n", str1, is_valid_string(str1));
    printf("'%s' is valid: %d\n", str2, is_valid_string(str2));
    printf("'%s' is valid: %d\n", str3, is_valid_string(str3));
    printf("'%s' is valid: %d\n", str4, is_valid_string(str4));
    printf("'%s' is valid: %d\n", str5, is_valid_string(str5));

    return 0;
}
