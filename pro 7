#include <stdio.h>

void displayArray(int arr[], int size) {
    if (size == 0) {
        printf("Array is empty.\n");
        return;
    }
    printf("Array elements: ");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

int insertElement(int arr[], int size, int capacity, int element, int position) {
    if (size >= capacity) {
        printf("Array is full. Insertion failed.\n");
        return size;
    }
    if (position < 0 || position > size) {
        printf("Invalid position. Insertion failed.\n");
        return size;
    }

    for (int i = size; i > position; i--) {
        arr[i] = arr[i - 1];
    }
    arr[position] = element;
    printf("Element %d inserted successfully.\n", element);
    return size + 1;
}

int deleteElement(int arr[], int size, int position) {
    if (size <= 0) {
        printf("Array is empty. Deletion failed.\n");
        return size;
    }
    if (position < 0 || position >= size) {
        printf("Invalid position. Deletion failed.\n");
        return size;
    }

    printf("Element %d at position %d deleted.\n", arr[position], position);
    for (int i = position; i < size - 1; i++) {
        arr[i] = arr[i + 1];
    }
    return size - 1;
}

int main() {
    int arr[100];
    int size = 0;
    int capacity = 100;
    int choice, element, position;

    do {
        printf("\n--- Array Operations Menu ---\n");
        printf("1. Display Array\n");
        printf("2. Insert Element\n");
        printf("3. Delete Element\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                displayArray(arr, size);
                break;
            case 2:
                printf("Enter the element to insert: ");
                scanf("%d", &element);
                printf("Enter the position (0 to %d) to insert: ", size);
                scanf("%d", &position);
                size = insertElement(arr, size, capacity, element, position);
                break;
            case 3:
                printf("Enter the position (0 to %d) to delete: ", size - 1);
                scanf("%d", &position);
                size = deleteElement(arr, size, position);
                break;
            case 4:
                printf("Exiting program.\n");
                break;
            default:
                printf("Invalid choice. Please try again.\n");
        }
    } while (choice != 4);

    return 0;
}
