#include <stdio.h>

int main() {
    int n;
    printf("Enter the number of terms: ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Please enter a positive integer.\n");
        return 1;
    }

    long long first = 0, second = 1, next, sum = 0;

    printf("Fibonacci Series: ");
    for (int i = 0; i < n; i++) {
        if (i <= 1) {
            next = (i == 0) ? first : second;
        } else {
            next = first + second;
            first = second;
            second = next;
        }
        printf("%lld ", next);
        sum += next;
    }

    printf("\nSum of the series: %lld\n", sum);

    return 0;
}
